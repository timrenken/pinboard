#pins.transitions-enabled
  - @pins.each do |pin|
    .box.panel.panel-default
      = link_to (image_tag pin.image.url), pin
      .panel-body
        %h2= link_to pin.title, pin
        %p.user
        Submitted by
        = link_to pin.user.username, user_path(pin.user.username)
        %p
        = pluralize(pin.comments.count, "comment")
        - if pin.user == current_user
          %p.user
            .btn-group.pull-center
              = link_to "Edit", edit_pin_path(pin), class: "btn btn-default"
              = link_to "Delete", pin_path(pin), method: :delete, class: "btn btn-default"
.text-center
  %h4= will_paginate @pins, :page_entries_info => true